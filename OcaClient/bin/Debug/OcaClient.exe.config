<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    <system.serviceModel>
        <bindings>
            <netTcpBinding>
                <binding name="NetTcpBinding_IAuthentication">
                    <security mode="None">
                        <transport sslProtocols="None" />
                    </security>
                </binding>
            </netTcpBinding>
        </bindings>
        <client>
            <endpoint address="net.tcp://localhost:8081/OcaWCF" binding="netTcpBinding"
                bindingConfiguration="NetTcpBinding_IAuthentication" contract="OcaGameServices.IAuthentication"
                name="NetTcpBinding_IAuthentication" />
        </client>	    
    </system.serviceModel>

    <system.net>  
        <mailSettings>  
            <smtp deliveryMethod="Network">
                <network host="smtp.office365.com" port="587" userName="OcaGameServices@hotmail.com" password="Ocagameadmin$" enableSsl="true" />
            </smtp>
        </mailSettings>  
  </system.net>  

</configuration>