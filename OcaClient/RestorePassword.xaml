<Window x:Class="OcaClient.RestorePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcaClient"
        mc:Ignorable="d"
        Title="RestorePassword" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txt_email" HorizontalAlignment="Left" Margin="241,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" TextChanged="TextBox_TextChanged" Height="33"/>
        <Label x:Name="lbl_instruction" Content="Ingrese su correo electrónico para enviar un correo con la información del cambio de contraseña" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="18"/>
        <Label x:Name="lbl_Email" Content="Correo electronico:" HorizontalAlignment="Left" Margin="174,175,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16"/>
        <Button x:Name="btn_close" Content="Cancelar" HorizontalAlignment="Left" Margin="482,368,0,0" VerticalAlignment="Top" Height="30" Width="114" Click="btn_close_Click"/>
        <Button x:Name="btn_send" Content="Enviar" HorizontalAlignment="Left" Margin="636,368,0,0" VerticalAlignment="Top" Height="30" Width="116" Click="btn_send_Click"/>
    </Grid>
</Window>
