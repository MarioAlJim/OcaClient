<Window x:Class="OcaClient.ReportUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcaClient"
        mc:Ignorable="d"
        Title="ReportUser" Height="498" Width="465">
    <Grid>
        <Label x:Name="lbl_instruction" Content="Seleccione el caso que mejor se adapte a su queja" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbx_VerbalAbuse" Content="Abuso verbal" HorizontalAlignment="Left" Margin="139,145,0,0" VerticalAlignment="Top" FontSize="22" Height="36" Width="194"/>
        <CheckBox x:Name="cbx_Afk" Content="Jugador AFK" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" FontSize="18"/>
        <CheckBox x:Name="cbx_name" Content="Nombre inapropiado" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Height="28" Width="156" FontSize="14"/>
        <CheckBox x:Name="cbx_actitude" Content="Actitud negativa" HorizontalAlignment="Center" Margin="0,354,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Send" Content="Enviar" HorizontalAlignment="Center" Margin="0,442,0,0" VerticalAlignment="Top" Height="30" Width="81"/>

    </Grid>
</Window>
