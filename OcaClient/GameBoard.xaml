        <Label Content="Username" HorizontalAlignment="Left" Margin="970,482,0,0" VerticalAlignment="Top"/>
        <Button Content="Report" HorizontalAlignment="Left" Margin="954,531,0,0" VerticalAlignment="Top"/>
        <Image x:Name="img_dice" HorizontalAlignment="Left" Height="110" Margin="534,546,0,0" VerticalAlignment="Top" Width="126"/>

        <Button x:Name="btn_Exit" Content="Exit" HorizontalAlignment="Left" Margin="915,609,0,0" VerticalAlignment="Top" Background="#FFE82D2D" Height="50" Width="118" FontSize="16"/>


        <TextBlock x:Name="lbl_Timer" HorizontalAlignment="Left" Margin="157,625,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <Grid Height="473" Width="647" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,56,0,0">
            <Image x:Name="img_RedChip" Height="48" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="587,415,0,0" Source="/FichaRoja.png" Width="64"/>
